<!-- Validation failure messages -->
<% if @bucket_list.errors.any? %>
  <% @bucket_list.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Bucket List</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_bucket_list" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for bucketlist -->
      <div class="form-group">
        <label for="bucketlist" class="control-label">
          Bucketlist
        </label>

        <input type="text" id="bucketlist" name="bucketlist" placeholder="Bucketlist" class="form-control" value="<%= @bucket_list.bucketlist %>">
      </div>

      <!-- Label and input for users_id -->
      <div class="form-group">
        <label for="users_id" class="control-label">
          Users
        </label>

        <%= select_tag(:users_id, options_from_collection_for_select(User.all, :id, :email, @bucket_list.users_id), :class => "form-control") %>
      </div>

      <!-- Label and input for dishes_id -->
      <div class="form-group">
        <label for="dishes_id" class="control-label">
          Dishes
        </label>

        <input type="text" id="dishes_id" name="dishes_id" placeholder="Dishes" class="form-control" value="<%= @bucket_list.dishes_id %>">
      </div>

      <!-- Label and input for selectedvenue_id -->
      <div class="form-group">
        <label for="selectedvenue_id" class="control-label">
          Selectedvenue
        </label>

        <input type="text" id="selectedvenue_id" name="selectedvenue_id" placeholder="Selectedvenue" class="form-control" value="<%= @bucket_list.selectedvenue_id %>">
      </div>

      <button class="btn btn-success">
        Create Bucket List
      </button>
      or
      <a href="/bucket_lists">Cancel</a>
    </form>
  </div>
</div>
